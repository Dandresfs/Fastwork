medium = 'screen and (max-width: 767px)'
large = 'screen and (max-width: 991px)'
xlarge = 'screen and (max-width: 1200px)'

body
  font-family: 'Lato', sans-serif
  font-size 16px
  color #273b47
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased

//**************************************** LOGIN ****************************************************
.bgimage
  background-image url("../imagenes/background_login.jpg")
  background-size 100%

.bgimage-inside
  padding-top 37.36%

//*************************************** NAVAR *****************************************************
.navbar-fastwork
  background-color #273b47
  border-radius 0

.navbar-nav>li>a
  padding 5px 15px

  &:hover
    background-color #273b47

.navbar-brand
  padding 5px 15px

.navbar-brand > img
  height 40px

.avatar img
  height 40px
  border-radius 50%

.avatar a
  color white

.nav .open>a, .nav .open>a:focus, .nav .open>a:hover
  background-color #273b47

.user-options
  width: 320px !important
  margin-right 20px
  background-color #273b47
  padding 0

.user-options a
  white-space normal

.user-options > li
  position relative

.user-options > li > a >span
  padding 0 5px

.user-options li > a
  color white
  padding 10px

.user-options > li > a:hover, .user-options > li > a:focus
  color white
  background-image none !important
  background-color #ff4700

//**************************************** BANNER **********************************************************************

.actualizar p, .actualizar strong
  display -webkit-inline-box

background-linear-gradient(direction,color-stop1,color-stop2,url-image)
  background -webkit-linear-gradient(direction,color-stop1,color-stop1),url-image
  background -moz-linear-gradient(direction,color-stop1,color-stop1),url-image
  background -ms-linear-gradient(direction,color-stop1,color-stop1),url-image
  background -o-linear-gradient(direction,color-stop1,color-stop1),url-image
  background linear-gradient(direction,color-stop1,color-stop1),url-image


.banner
  background-linear-gradient(top,rgba(0,0,0,0.6),rgba(0,0,0,8),url("../imagenes/banner.jpg"))
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  height 250px
  @media large
    height 300px
  @media medium
    height 450px

.banner-white
  background-linear-gradient(top,rgba(39,59,71,0.5),rgba(39,59,71,0.5),url("../imagenes/banner.jpg"))
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  height 300px


.banner-hv
  background-linear-gradient(top,rgba(0,0,0,0.6),rgba(0,0,0,8),url("../imagenes/banner-hv.jpg"))
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  height 250px
  @media large
    height 300px
  @media medium
    height 450px

@media medium
  .information-user
    text-align center


.banner > .row, .banner-hv > .row
  margin-top 25px

.avatar-account
  height 200px
  width 200px
  border-radius 50%

.fullname-account
  color white
  font-size 3em

.username-account
  color white
  font-size 16px

.cuenta
  color white
  padding 0 5px

legend
  padding 10px 0
  font-size 3rem

label
